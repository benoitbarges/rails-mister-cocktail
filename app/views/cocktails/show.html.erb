
<div class="container">
  <h1 class="text-center mt-4"><%= @cocktail.name %></h1>
  <h4>Ingredients</h4>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <p><%= dose.ingredient.name %>
        <%= dose.description %>
          <%= link_to dose_path(dose), method: :delete do %>
                    <i class="fa fa-trash destroy_dose"></i>
          <% end %>
        </p>
      </li>
    <% end %>
  </ul>

  <div class="w-50 mx-auto">
    <%= simple_form_for([@cocktail, @dose]) do |f| %>
      <%= f.association :ingredient %>
      <%= f.input :description, label: "Qantité" %>
      <%= f.submit class: "btn btn-primary", value: "Ajouter l'ingrédient" %>
    <% end %>
  </div>
</div>




