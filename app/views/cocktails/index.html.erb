<h1>Cocktails (<%= Cocktail.count %>)</h1>

<%= link_to "Add a new cocktail", new_cocktail_path %>


<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-12 col-md-6  col-lg-4">
        <div class="card-category my-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/cocktail)">
          <%= link_to cocktail.name , cocktail_path(cocktail) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
